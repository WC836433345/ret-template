{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": false, // 是否在表达式和声明上有隐含的any类型时报错
        "sourceMap": true,
        "module": "es6",
        "lib": ["es6", "dom"],
        "moduleResolution": "node", // 模块解析策略  没有这句引入第三方模块有红线标识
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "baseUrl":"./",
        "allowSyntheticDefaultImports":true,
        "paths": {
            "@/*":["./src/*"]
        },
        // "typeRoots":[
        //     "./node_modules/@type","./typings/modules"
        // ] 
    },
    "exclude": [
        "node_modules",
        "dist",
        "config",
    ],
    "include":[
        "src"
    ]
}